--!strict

local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Shared = ReplicatedStorage:WaitForChild("Shared")
local ActionTypes = require(Shared.Types.ActionTypes)

type Block = ActionTypes.Block
type ExecutionContext = ActionTypes.ExecutionContext
type HandlerResult = ActionTypes.HandlerResult

local WaitHandler = {}

function WaitHandler.Execute(Block: Block, _Context: ExecutionContext): HandlerResult?
	local Duration = Block.Time or 0

	if Duration > 0 then
		task.wait(Duration)
	end

	return nil
end

return WaitHandler